<Window x:Class="WPlotUITester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPlotUITester"
        xmlns:p="clr-namespace:WPlot;assembly=WPlot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="525">
    <Grid>
        <p:XYPlot LineBrush="Red" LineThickness="2" XMax="5" YMax="6" Margin="10" Background="White">
            <p:XYPlot.DataSource>
                <local:SimpleDataSource />
            </p:XYPlot.DataSource>
        </p:XYPlot>
    </Grid>
</Window>
